{
  "title": "JJ: remap arrow keys for hhkb",
  "rules": [
    {
      "description": "remap Fn-hjkl to arrow keys",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_arrow"
          },
          "to": [
            {
              "key_code": "keypad_asterisk"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "keypad_asterisk"
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "down_arrow"
          },
          "to": [
            {
              "key_code": "keypad_slash"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "keypad_slash"
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "up_arrow"
          },
          "to": [
            {
              "key_code": "home"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "home"
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_arrow"
          },
          "to": [
            {
              "key_code": "page_up"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "page_up"
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ]
        }
      ]
    }
  ]
}
